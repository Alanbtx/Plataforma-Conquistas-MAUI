<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GameAchievementsApp.ViewModels"
             xmlns:models="clr-namespace:GameAchievementsApp.Models"
             x:Class="GameAchievementsApp.Views.AdminDashboardPage"
             Title="Painel do Administrador"
             x:DataType="vm:AdminDashboardViewModel">

    <Grid RowDefinitions="Auto, Auto, *" Padding="20" RowSpacing="15">

        <VerticalStackLayout Grid.Row="0" Spacing="15">
            <Label Text="Gestão de Jogos" FontSize="24" FontAttributes="Bold"/>

            <Frame Padding="15" CornerRadius="10" BorderColor="LightGray">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Adicionar Novo Jogo" FontSize="18" FontAttributes="Bold"/>
                    <Entry Placeholder="Título do Jogo" Text="{Binding NovoJogoTitulo}"/>
                    <Entry Placeholder="Plataforma (ex: PC, PS5)" Text="{Binding NovoJogoPlataforma}"/>
                    <Button Text="Adicionar Jogo" Command="{Binding AddJogoCommand}"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Ver Progresso Geral dos Jogadores"
                    Command="{Binding GoToRelatorioProgressoCommand}"
                    Margin="0,10,0,0"/>

        </VerticalStackLayout>

        <Label Grid.Row="1" Text="Jogos Registados" FontSize="20" FontAttributes="Bold" Margin="0,5,0,0"/>

        <CollectionView Grid.Row="2" 
                        ItemsSource="{Binding Jogos}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedGame}">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Jogo">
                    <Frame Padding="10" Margin="0,5" CornerRadius="5" BorderColor="Gainsboro">
                        <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">

                            <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                                <VerticalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.SelectedGameChangedCommand}"
                                                          CommandParameter="{Binding .}"/>
                                </VerticalStackLayout.GestureRecognizers>
                                <Label Text="{Binding Titulo}" FontSize="16" FontAttributes="Bold"/>
                                <Label Text="{Binding Plataforma}" FontSize="14"/>
                            </VerticalStackLayout>

                            <HorizontalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="5">
                                <Button Text="Editar"
                                        FontSize="12"
                                        Padding="8,4"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdminDashboardViewModel}}, Path=EditJogoCommand}"
                                        CommandParameter="{Binding .}" />

                                <Button Text="Excluir"
                                        BackgroundColor="Red"
                                        FontSize="12"
                                        Padding="8,4"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdminDashboardViewModel}}, Path=DeleteJogoCommand}"
                                        CommandParameter="{Binding .}" />
                            </HorizontalStackLayout>

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>