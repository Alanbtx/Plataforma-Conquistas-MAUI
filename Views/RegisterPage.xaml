<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GameAchievementsApp.ViewModels"
             x:Class="GameAchievementsApp.Views.RegisterPage"
             Title="Criar Nova Conta"
             x:DataType="vm:RegisterViewModel">

    <VerticalStackLayout Padding="30,0" Spacing="15" VerticalOptions="Center">

        <Label Text="Registo" FontSize="32" HorizontalOptions="Center" FontAttributes="Bold" />
        <Label Text="Cria a tua conta para começar" FontSize="18" HorizontalOptions="Center" />

        <Entry Placeholder="Nome de Utilizador" Text="{Binding NomeUtilizador}" Margin="0,20,0,0" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
        <Entry Placeholder="Confirmar Password" IsPassword="True" Text="{Binding ConfirmarPassword}" />
        <Entry Placeholder="Código de Administrador (Opcional)" Text="{Binding CodigoAdmin}" />

        <Button Text="Registar" Command="{Binding RegisterCommand}" Margin="0,20,0,0" />

    </VerticalStackLayout>
</ContentPage>