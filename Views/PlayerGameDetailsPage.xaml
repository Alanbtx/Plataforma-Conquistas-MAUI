<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GameAchievementsApp.ViewModels"
             xmlns:models="clr-namespace:GameAchievementsApp.Models"
             x:Class="GameAchievementsApp.Views.PlayerGameDetailsPage"
             Title="Lista de Conquistas"
             x:DataType="vm:PlayerGameDetailsViewModel">

    <Grid RowDefinitions="Auto, *">

        <Label Grid.Row="0" 
               Text="Conquistas DisponÃ­veis" 
               FontSize="24" 
               FontAttributes="Bold" 
               Padding="20"/>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Conquistas}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedConquista}">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Conquista">
                    <Frame Padding="20" Margin="10,5" CornerRadius="10" BorderColor="Gainsboro">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding Titulo}" FontSize="18" FontAttributes="Bold"/>
                            <Label Text="{Binding Descricao}" FontSize="14" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>