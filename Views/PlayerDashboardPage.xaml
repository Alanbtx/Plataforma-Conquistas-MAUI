<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GameAchievementsApp.ViewModels"
             xmlns:models="clr-namespace:GameAchievementsApp.Models"
             x:Class="GameAchievementsApp.Views.PlayerDashboardPage"
             Title="Lista de Jogos"
             x:DataType="vm:PlayerDashboardViewModel">

    <Grid RowDefinitions="Auto, *" ColumnDefinitions="*, Auto" Padding="20">

        <Label Grid.Row="0" Grid.Column="0"
               Text="Escolhe um Jogo" 
               FontSize="24" 
               FontAttributes="Bold"
               VerticalOptions="Center"/>

        <Button Grid.Row="0" Grid.Column="1"
                Text="Ver Progresso"
                FontSize="12"
                VerticalOptions="Center"
                Command="{Binding GoToProgressoCommand}" />

        <CollectionView Grid.Row="1" Grid.ColumnSpan="2"
                        ItemsSource="{Binding Jogos}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedGame}">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Jogo">
                    <Frame Padding="20" Margin="10,5" CornerRadius="10" BorderColor="Gainsboro">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding Titulo}" FontSize="18" FontAttributes="Bold"/>
                            <Label Text="{Binding Plataforma}" FontSize="14" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>