<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GameAchievementsApp.ViewModels"
             xmlns:models="clr-namespace:GameAchievementsApp.Models"
             x:Class="GameAchievementsApp.Views.GameDetailsAdminPage"
             Title="Detalhes do Jogo"
             x:DataType="vm:GameDetailsAdminViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Frame Padding="15" CornerRadius="10" BorderColor="LightGray">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Adicionar Nova Conquista" FontSize="18" FontAttributes="Bold"/>
                    <Entry Placeholder="Título da Conquista" Text="{Binding NovoTituloConquista}"/>
                    <Entry Placeholder="Descrição (ex: Complete o tutorial)" Text="{Binding NovaDescricaoConquista}"/>
                    <Button Text="Adicionar Conquista" Command="{Binding AddConquistaCommand}"/>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Conquistas Registadas" FontSize="20" FontAttributes="Bold" Margin="0,20,0,0"/>
            <CollectionView ItemsSource="{Binding Conquistas}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Conquista">
                        <Frame Padding="10" Margin="0,5" CornerRadius="5" BorderColor="Gainsboro">
                            <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">

                                <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                                    <Label Text="{Binding Titulo}" FontAttributes="Bold" FontSize="16"/>
                                    <Label Text="{Binding Descricao}" FontSize="14"/>
                                </VerticalStackLayout>

                                <HorizontalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="5">

                                    <Button Text="Editar"
                                            FontSize="12"
                                            Padding="8,4"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GameDetailsAdminViewModel}}, Path=EditConquistaCommand}"
                                            CommandParameter="{Binding .}" />

                                    <Button Text="Excluir"
                                            BackgroundColor="Red"
                                            FontSize="12"
                                            Padding="8,4"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GameDetailsAdminViewModel}}, Path=DeleteConquistaCommand}"
                                            CommandParameter="{Binding .}" />

                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>